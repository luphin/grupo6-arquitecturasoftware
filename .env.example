# ==============================================
# application settings
# ==============================================
app_name=moderation-service
app_version=1.0.0
environment=development
debug=true
log_level=info

# ==============================================
# server settings
# ==============================================
host=0.0.0.0
port=8000

# ==============================================
# mongodb settings
# ==============================================
mongodb_url=mongodb://mongodb:27017
mongodb_db=moderation_db
mongodb_min_pool_size=10
mongodb_max_pool_size=50

# ==============================================
# redis settings
# ==============================================
redis_url=redis://redis:6379/0
redis_password=
redis_db=0
redis_max_connections=50
redis_socket_timeout=5
redis_socket_connect_timeout=5

# cache ttl (en segundos)
cache_blacklist_ttl=1800        # 30 minutos
cache_ban_list_ttl=300          # 5 minutos
cache_default_ttl=600           # 10 minutos

# ==============================================
# rabbitmq settings (event bus)
# ==============================================
rabbitmq_url=amqp://guest:guest@rabbitmq:5672/
rabbitmq_exchange=moderation_events
rabbitmq_queue=moderation_queue
rabbitmq_routing_key=moderation.*
rabbitmq_enabled=true

# ==============================================
# moderation engine settings
# ==============================================
# detoxify model: multilingual | original | unbiased
detoxify_model=multilingual

# thresholds (0.0 - 1.0) - Umbrales de Toxicidad
toxicity_threshold_low=0.5
toxicity_threshold_medium=0.7
toxicity_threshold_high=0.9

# ==============================================
# strike system settings
# ==============================================
strike_reset_days=30            # días para resetear strikes
temp_ban_hours=24               # duración de ban temporal
max_strikes_before_temp_ban=3   # strikes antes de ban temporal
max_strikes_before_perm_ban=5   # strikes antes de ban permanente

# ==============================================
# supported languages
# ==============================================
supported_languages=es,en,pt,fr,de,it

# ==============================================
# api settings
# ==============================================
api_v1_prefix=/api/v1
api_title=moderation service api
api_description=servicio de moderación multilenguaje para chat
api_version=1.0.0

# cors
cors_origins=["http://localhost:3000","http://localhost:8080","http://localhost:8000"]
cors_allow_credentials=true
cors_allow_methods=["*"]
cors_allow_headers=["*"]

# ==============================================
# security settings
# ==============================================
# jwt para comunicación entre microservicios
jwt_secret_key=your-super-secret-jwt-key-change-in-production-min-32-chars
jwt_algorithm=hs256
jwt_expiration_hours=24

# api key para endpoints admin (opcional)
admin_api_key=your-admin-api-key-change-in-production

# ==============================================
# rate limiting
# ==============================================
rate_limit_enabled=true
rate_limit_requests_per_minute=60
rate_limit_requests_per_hour=1000

# ==============================================
# monitoring & observability
# ==============================================
enable_metrics=true
metrics_port=9090
